// 入口
function ScoreSortInfoPageInit() {
	// 先加载本次竞赛的时间、题目数量等信息 
	testPaperRecordStore.load({
		callback : function(record, options, success) {
			// 初始竞赛基本信息
			initExamBasicInfo();
			// 初始竞赛当前时间
			setCurrentTime();
			// 初始grid列信息
			WindowInit();
			// store加载当前竞赛答题信息
			loadScoreSortInfo();
			// 初始化界面
			new Ext.Viewport({
				layout : 'border',
				hideMode : Ext.isIE ? 'offsets' : 'display',
				items : [ form, scoreSortGrid ],
				renderTo : Ext.getBody()
			});
		}
	});
}